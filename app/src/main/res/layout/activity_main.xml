<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".MainActivity">

    <!-- Optional App Title -->

    <!-- About Button -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="4G Network Manager"
        android:textColor="#1A2430"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_about"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="About Us"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="#AED3F2"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white"
        android:onClick="onAboutClick" />

    <!-- Instructions Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_instructions"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Instructions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="#AED3F2"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_4g_only"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white"
        android:onClick="onInstructionClick" />

    <!-- 4G Only Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_4g_only"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:text="Set 4G Only"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#1E90FF"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#80FFFFFF"
        android:onClick="onSet4GOnlyClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>
