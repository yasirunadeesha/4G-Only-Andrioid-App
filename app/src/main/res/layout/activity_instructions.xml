<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="16dp"
    tools:context=".instructions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ✅ Toolbar / Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_back"
                android:tint="#1A2430"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Instructions"
                android:textColor="#1A2430"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ✅ Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Set 4G Only"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:paddingVertical="16dp" />

        <!-- ✅ Step 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:backgroundTint="#FFFFFF"
            android:clipToOutline="true"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/numberone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Click the 'Set 4G Only' button."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tap"
                android:tint="#9AA0A6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- ✅ Step 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:backgroundTint="#FFFFFF"
            android:clipToOutline="true"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/number2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tap 'Select Phone Index'."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/touch"
                android:tint="#9AA0A6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- ✅ Step 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/number3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select 'Phone0 for SIM1' or 'Phone1 for SIM2'."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gear"
                android:tint="#9AA0A6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- ✅ Step 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/number4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tap on the ‘Set Preferred Network Type’ dropdown."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/touch"
                android:tint="#9AA0A6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- ✅ Step 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/number5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose 'LTE Only'."
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gear"
                android:tint="#9AA0A6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
</ScrollView>
